{
  "manifest_version": 3,
  "name": "OopsWrongTab - Save Reputation, Stay Professional",
  "version": "1.0.0",
  "description": "Privacy-first tab redirector that saves you from embarrassing moments during screen sharing",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "identity",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "src/main-popup/popup.html",
    "default_title": "OopsWrongTab Settings"
  },
  "commands": {
    "emergency_redirect": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Emergency redirect to safe page"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}